doctype html
html(lang="ko")
  head
    <link rel="stylesheet" href="https://unpkg.com/mvp.css"> 
    title #{pageTitle} | #{siteName}
    style.
      nav ul {
          display: flex;
          gap: 4px;
        }
  body
    header 
      h1 I Love #{nickname}!
      nav
        ul 
          li
            a(href="/") Home
          if loggedIn
            li 
              a(href="/users/logout") Log Out 
            li
              a(href="/my-profile") #{loggedInUser.name}Ïùò Profile
          else
            li
              a(href="/login") Login
            li
              a(href="/join") Join
          li
            a(href="/videos/upload") Upload Video
          li
            a(href="/search") Search
      h1=pageTitle
    main
      block content
    include partials/footer.pug