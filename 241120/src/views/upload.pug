extends base.pug

block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(type="text" name="title" placeholder="Title" maxlength=80 required)
    input(type="text" name="description" placeholder="Description" minlength=20 required)
    input(type="text" name="hashtags" placeholder="Hashtags, seperated by comma" required)
    input(type="submit" value="Upload Video") 